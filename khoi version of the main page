<!-- Custom JavaScript -->
<script>
// Search friend functionality
function searchFriend() {
    const query = document.getElementById('friendSearch').value.toLowerCase();
    console.log('Searching for:', query);
    // Implement the search functionality and update the UI with search results
}

// Function to add a new friend to the friend list
function addNewFriend(friendName) {
    const friendList = document.getElementById('friendList');
    const newFriend = document.createElement('li');
    newFriend.className = 'list-group-item';
    newFriend.textContent = friendName;
    friendList.appendChild(newFriend);
}

// Function to add a new recommendation
function addRecommendation(friendName) {
    const recommendations = document.getElementById('recommendations');
    const newRecommendation = document.createElement('li');
    newRecommendation.className = 'list-group-item';
    newRecommendation.textContent = friendName;
    recommendations.appendChild(newRecommendation);
}

// Example usage (you can remove these calls)
addNewFriend('New Friend 1');
addRecommendation('Recommended Friend 4');
</script>

